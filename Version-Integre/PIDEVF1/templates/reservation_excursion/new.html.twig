
{% extends 'Front/front.html.twig' %}

{% block title %}New ReservationExcursion{% endblock %}

{% block body %}

    <div id="main">
        <!-- Post -->
        <section class="post">
            <header class="major">
                <span class="date">
    <h1>Create new ReservationExcursion</h1>
</span>
            </header>

            <div class="section-content">
                {{ form_start(form , {'attr': {'class':'form-horizontal','novalidate':'novalidate'}} ) }}
                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Client, {'label':'Votre CIN' ,'attr':{'placeholder': 'CIN...'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Excursion, {'attr':{'placeholder': 'Restaurant'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Date_Reservation_Excursion, {'attr':{'placeholder': 'Date_Reservation_Excursion...'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        <button type= "submit" class="btn btn-success"> Reserver ! </button>
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        <a href="{{ path('reservation_excursion_index') }}">back to list</a>
                    </fieldset>
                </div>

                {{ form_end(form) }}
            </div>
        </section>
    </div>
{% endblock %}